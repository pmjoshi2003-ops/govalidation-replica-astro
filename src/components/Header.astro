---
// Header.astro
// Defines the sticky navigation bar, ensuring the mobile menu logic is robust.
const navLinks = [
  { text: 'Home', href: '/' },
  { text: 'GoVal AI', href: '/ai' },
  { text: 'Solutions', href: '/solutions' },
  { text: 'About GoVal', href: '/about' },
  { text: 'Blogs', href: '/blog' },
  { text: 'Customer Stories', href: '/stories' },
  { text: 'Contact Us', href: '/contact' },
];
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <svg viewBox="0 0 48 48" class="w-8 h-8">
            <circle cx="12" cy="18" r="4" class="fill-indigo-500"></circle>
            <circle cx="28" cy="12" r="4" class="fill-red-600"></circle>
            <circle cx="20" cy="36" r="4" class="fill-teal-500"></circle>
            <path d="M12 18 L28 12 L20 36 Z" class="fill-gray-200/50"></path>
        </svg>
        <span class="text-2xl font-bold text-gray-800 tracking-wide">GOVAL</span>
      </a>

      <!-- Desktop Navigation & CTA (Hidden on Mobile) -->
      <nav class="hidden lg:flex lg:items-center lg:space-x-6">
        {navLinks.map((link) => (
          <a href={link.href} class="text-sm font-medium text-gray-700 hover:text-red-600 transition duration-150">
            {link.text}
          </a>
        ))}
        <!-- Desktop Get Started Button (Orange color to match the desired style) -->
        <a 
          href="#" 
          class="ml-4 px-4 py-2 text-sm font-bold text-white bg-orange-500 rounded-lg shadow-lg hover:bg-orange-600 transition duration-150"
        >
          Get Started
        </a>
      </nav>

      <!-- Mobile/Tablet Menu Button -->
      <div class="flex lg:hidden items-center space-x-4">
        <button id="mobile-menu-button" type="button" class="text-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-md p-2 transition duration-150">
          <!-- Icon for Menu (3 lines) -->
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

    </div>
  </div>

  <!-- Mobile Menu Drawer (Hidden by Default, shows on 3-line click) -->
  <div id="mobile-menu" class="hidden lg:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {navLinks.map((link) => (
        <a href={link.href} class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-red-600">
          {link.text}
        </a>
      ))}
      <a 
        href="#" 
        class="block text-center mt-3 mx-2 px-3 py-3 text-base font-bold text-white bg-orange-500 rounded-lg shadow-xl hover:bg-orange-600 transition duration-150"
      >
        Get Started
      </a>
    </div>
  </div>
</header>

<script>
  // Simple JavaScript to toggle the mobile menu visibility
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    if (button && menu) {
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
