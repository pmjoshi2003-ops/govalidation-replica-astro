    <script>
        function showMessage(message) {
            const msgBox = document.getElementById('message-box');
            msgBox.textContent = message;
            msgBox.classList.add('show');
            
            // Hide the message after 3 seconds
            setTimeout(() => {
                msgBox.classList.remove('show');
            }, 3000);
        }

        function handleSubmit(event) {
            event.preventDefault(); // Prevent real submit
            const form = document.getElementById('contactForm');
            const terms = document.getElementById('terms');
            
            if (!terms.checked) {
                // Use custom message display instead of alert()
                showMessage('Please agree to the Terms of Use and Privacy Policy.');
                return;
            }
            
            // Collect form data (for simulation/logging)
            const formData = new FormData(form);
            const data = {};
            for (const [key, value] of formData.entries()) {
                data[key] = value;
            }

            console.log('--- Form Submission Data (Simulated) ---');
            console.log(data);
            console.log('----------------------------------------');
            
            // Simulate successful submission
            showMessage('Form submitted successfully! We\'ll get back to you soon.');
            form.reset(); // Clear form
        }
    </script>
</body>
</html>
