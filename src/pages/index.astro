<!-- Script remains in the main file as it initializes functionality for both components -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- 1. Hamburger Menu Toggle Logic (Functionality for Header component) ---
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');

        if (button && menu) {
            // Toggle the 'hidden' class on the menu when the button is clicked
            button.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
            
            // Close menu when a link is clicked (for smoother navigation on mobile)
            menu.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    // Only hide if the menu is currently visible
                    if (!menu.classList.contains('hidden')) {
                        menu.classList.add('hidden');
                    }
                });
            });
        }


        // --- 2. Safe Button Logging Logic (Functionality for Hero component) ---
        const buttonsWithData = document.querySelectorAll('button[data-action]');
        buttonsWithData.forEach(button => {
            const message = button.getAttribute('data-action');
            button.removeAttribute('onclick'); 
            
            button.addEventListener('click', () => {
                console.log(`[Action] ${message}`);
            });
        });
    });
</script>
